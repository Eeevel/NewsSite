<div class="row row-cols-1 row-cols-md-4">
  <% articles.each do |article| %>
    <div class="col mb-4">
      <div class="card border-dark h-100">
        <%= image_tag article.news_main_image.url(:thumb), class: "card-img-top"%>
        <div class="card-body">
          <h4 class="card-title"><%= link_to article.title, article_path(article.id) %></h4>
          <%= render 'articles/date', article: article %>
        </div>
      </div>
    </div>
  <% end %>
</div>
