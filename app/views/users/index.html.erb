<h1>Users</h1>

<div class="row row-cols-1 row-cols-md-5">
  <% @users.each do |user| %>
    <% presenter = UserPresenter.new(user) %>
    <div class="col mb-4">
      <div class="card border-dark h-100">
        <%= image_tag presenter.small_avatar, class: "card-img-top"%>
        <div class="card-body">
          <h4 class="card-title"><%= link_to user.nickname, user %></h4>
          <p class="card-text"><%= user.full_name %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
