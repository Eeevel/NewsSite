<% if user_signed_in? %>
  <div class="row">
    <div class="col">
      <%= image_tag @user.avatar.url(:large) %>
    </div>

    <div class="col">
      <h1><%= @user.full_name %></h1>
      <h2><%= @user.nickname %></h2>
      <p>Role: <%= @user.role %></p>
      <p>Address: <%= @user.address %></p>
      <p>Date of Birth: <%= @user.date_of_birth.strftime('%d %B, %Y') %></p>

      <%= link_to 'Activities', user_activities_path(@user), class: 'btn btn-outline-primary' %>

      <% if policy(@user).update? %>
        <%= link_to "Edit", edit_user_path(@user), class: 'btn btn-outline-primary' %>
      <% end %>

      <%= link_to "Subscriptions", user_subscriptions_path(@user), class: 'btn btn-outline-primary' %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col">
      <%= image_tag @user.avatar.url(:large) %>
    </div>

    <div class="col">
      <h1><%= @user.full_name %></h1>
      <p>For further viewing, you must register:</p>
      <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-outline-primary' %>
    </div>
  </div>

<% end %>
