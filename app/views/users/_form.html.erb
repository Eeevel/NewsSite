<%= form_with model: user do |form| %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control", disabled: user.id != current_user.id %>
    <%= render 'users/error', user: user, field: :first_name %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control", disabled: user.id != current_user.id %>
    <%= render 'users/error', user: user, field: :last_name %>
  </div>

    <div class="form-group">
  <%= form.label 'Upload avatar' %>
  <%= form.file_field :avatar, class: "form-control-file", disabled: user.id != current_user.id %>
  <%= render 'users/error', user: user, field: :avatar %>
    </div>

  <div class="form-group">
    <%= form.label :nickname %>
    <%= form.text_field :nickname, class: "form-control", disabled: user.id != current_user.id %>
    <%= render 'users/error', user: user, field: :nickname %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control", disabled: user.id != current_user.id %>
    <%= render 'users/error', user: user, field: :address %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth, class: "form-control", disabled: user.id != current_user.id %>
    <%= render 'users/error', user: user, field: :date_of_birth %>
  </div>

  <div class="form-group">
    <%= form.label :role %>
    <%= form.select :role,
                    options_for_select(User.roles.keys,
                                       selected: user.role),
                    {},
                    { class: "form-control",
                      disabled: !current_user.admin? } %>
    <%= render 'users/error', user: user, field: :role %>
  </div>

  <div>
    <%= form.submit 'Update profile', class: 'btn btn-outline-primary' %>
    <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
