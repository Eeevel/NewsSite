<%= form_with model: [ article, article.ratings.build ] do |form| %>
  <div class="form-group">
    <h3>Rating</h3>
    <%= form.select :number,
                    options_for_select([0, 1, 2, 3, 4, 5]),
                    {},
                    { class: "form-control"} %>
  </div>

  <div>
    <%= form.submit 'Rate', class: 'btn btn-outline-primary' %>
  </div>
<% end %>